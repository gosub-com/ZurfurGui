{
    "Controller": "Window",
    "Classes": [ "Window" ],
    "Content": [
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "(Name)": "_windowTitle",
                    "Classes": [ "Window.Title" ],
                    "Layout": "DockPanel",
                    "Content": [
                        {
                            "Controller": "Text",
                            "Classes": [ "Window.Title.TextColor", "Window.Title.Menu" ],
                            "Dock": "Left",
                            "Text": "≡",
                            "Font": { "Size": 24.0 }
                        },
                        {
                            "(Name)": "_closeButton",
                            "Controller": "Text",
                            "Classes": [ "Window.Title.TextColor", "Window.Title.Close" ],
                            "Dock": "Right",
                            "Text": "X",
                            "Font": { "Size": 24.0 }
                        },
                        {
                            "Controller": "Text",
                            "Classes": [ "Window.Title.Text", "Window.Title.TextColor" ],
                            "DisableHitTest": true
                        }
                    ]
                },
                {
                    "(Name)": "_windowContent",
                    "Classes": [ "Window.Content" ],
                    "Clip": true
                }
            ]
        },
        {
            "(Name)": "_resizeHandle",
            "Align": {
                "Horizontal": "Right",
                "Vertical": "Bottom"
            },
            "Margin": {
                "Left": 0,
                "Top": 0,
                "Right": -5,
                "Bottom": -13
            },
            "Content": [
                {
                    "Controller": "Text",
                    "Text": "◢",
                    "Offset": {
                        "X": -0.5,
                        "Y": -1
                    },
                    "Font": { "Size": 32.0 }
                }
            ]
        }
    ]
}