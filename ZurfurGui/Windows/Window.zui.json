{
    "Controller": "Window",
    "Classes": [ "Window" ],
    "Styles": [
        {
            "Selectors": "default:Window",
            "Background": {
                "Color": "LightSkyBlue",
                "Radius": 10.0,
                "BorderWidth": 2,
                "BorderColor": "AliceBlue"
            },
            "SizeMin": {
                "Width": 160,
                "Height": 80
            }
        },
        {
            "Selectors": "default:Window.Title",
            "Padding": {
                "Left": 10,
                "Top": 4,
                "Right": 10,
                "Bottom": 0
            },
            "Background": {
                "Color": "DarkSlateBlue",
                "Radius": 10.0
            },
            "Dock": "Top",
            "Align": { "Vertical": "Top" }
        },
        {
            "Selectors": "default:Window.Title.Text",
            "Text": "Window Title",
            "Align": {
                "Horizontal": "Center",
                "Vertical": "Center"
            },
            "Font": { "Size": 24.0 }
        },
        {
            "Selectors": "default:Window.Content",
            "Margin": {
                "Left": 10,
                "Top": 10,
                "Right": 10,
                "Bottom": 10
            }
        }
    ],
    "Content": [
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "(Name)": "_windowTitle",
                    "Classes": [ "Window.Title" ],
                    "Layout": "DockPanel",
                    "Content": [
                        {
                            "Controller": "Text",
                            "Dock": "Left",
                            "Text": "≡",
                            "Font": { "Size": 24.0 }
                        },
                        {
                            "(Name)": "_closeButton",
                            "Controller": "Text",
                            "Dock": "Right",
                            "Text": "X",
                            "Font": { "Size": 24.0 }
                        },
                        {
                            "Classes": [ "Window.Title.Text" ],
                            "Controller": "Text",
                            "DisableHitTest": true,
                        }
                    ]
                },
                {
                    "(Name)": "_windowContent",
                    "Classes": [ "Window.Content" ],
                    "Clip": true
                }
            ]
        },
        {
            "(Name)": "_resizeHandle",
            "Align": {
                "Horizontal": "Right",
                "Vertical": "Bottom"
            },
            "Margin": {
                "Left": 0,
                "Top": 0,
                "Right": -5,
                "Bottom": -13
            },
            "Content": [
                {
                    "Controller": "Text",
                    "Text": "◢",
                    "Offset": {
                        "X": -0.5,
                        "Y": -1
                    },
                    "Font": { "Size": 32.0 }
                }
            ]
        }
    ]
}