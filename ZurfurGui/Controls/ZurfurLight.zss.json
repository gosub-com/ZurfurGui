{
    //
    // Zurfur default styles for light mode
    //
    "Name": "ZurfurLight",
    "Styles": [
        // AppWindow
        {
            "Selectors": "AppWindow",
            "BackgroundColor": "LightSkyBlue"
        },
        // Text
        {
            "Selectors": "Text",
            "Color": "Black"
        },
        // Button
        {
            "Selectors": "Button",
            "BorderWidth": 2,
            "BorderColor": "#606060",
            "BackgroundColor": "#DDDDDD",
            "Color": "Black",
            "Padding": {
                "Left": 2,
                "Top": 2,
                "Right": 2,
                "Bottom": 2
            }
        },
        // Button hover
        {
            "Selectors": "Button:IsPointerOver",
            "BorderColor": "#3C7FB1",
            "BackgroundColor": "#BEE6FD"
        },
        // Button pressed
        {
            "Selectors": "Button:IsPressed",
            "BackgroundColor": "#8EB6FD"
        },
        // Window
        {
            "Selectors": "Window",
            "BackgroundColor": "White",
            "BorderRadius": 10.0,
            "BorderWidth": 2,
            "BorderColor": "Navy",
            "SizeMin": {
                "Width": 160,
                "Height": 80
            }
        },
        // Window Title
        {
            "Selectors": "Window.Title",
            "Padding": {
                "Left": 10,
                "Top": 4,
                "Right": 10,
                "Bottom": 0
            },
            "BackgroundColor": "SlateBlue",
            "BorderRadius": 9,
            "Dock": "Top",
            "Align": { "Vertical": "Top" }
        },
        // Window Title Text
        {
            "Selectors": "Window.Title.Text",
            "Text": "Window Title",
            "Align": {
                "Horizontal": "Center",
                "Vertical": "Center"
            },
            "Font": { "Size": 24.0 }
        },
        // Window Title Text Color
        {
            "Selectors": "Window.Title.TextColor",
            "Color": "White"
        },
        // Window.Title.Close:IsPointerOver
        {
            "Selectors": "Window.Title.Close:IsPointerOver",
            "Color": "LightSkyBlue"
        },
        {
            "Selectors": "Window.Content",
            "Margin": {
                "Left": 10,
                "Top": 10,
                "Right": 10,
                "Bottom": 10
            }
        },
        {
            "Selectors": "TextBox",
            "BackgroundColor": "LightBlue",
            "BorderWidth": 2,
            "BorderColor": "Navy",
            "SizeMin": {
                "Width": 100
            },
            "Padding": {
                "Left": 2,
                "Top": 2,
                "Right": 0,
                "Bottom": 0
            }
        }
    ]
}
