{
    "Controller": "Window",
    "Classes": [ "Window" ],
    "Content": [
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Classes": [ "Window.Title" ],
                    "Name": "_windowTitle",
                    "Layout": "DockPanel",
                    "Content": [
                        {
                            "Controller": "Text",
                            "Dock": "Left",
                            "Text": "≡",
                            "FontSize": 24.0
                        },
                        {
                            "Controller": "Text",
                            "Name": "_closeButton",
                            "Dock": "Right",
                            "Text": "X",
                            "FontSize": 24.0
                        },
                        {
                            "Classes": [ "Window.Title.Text" ],
                            "Controller": "Text",
                            "DisableHitTest": true
                        }
                    ]
                },
                {
                    "Name": "_windowContent",
                    "Classes": [ "Window.Content" ],
                    "Clip": true
                }
            ]
        },
        {
            "Name": "_resizeHandle",
            "AlignHorizontal": "Right",
            "AlignVertical": "Bottom",
            "Margin": {
                "Left": 0,
                "Top": 0,
                "Right": -5,
                "Bottom": -13
            },
            "Content": [
                {
                    "Controller": "Text",
                    "Text": "◢",
                    "Offset": {
                        "X": -0.5,
                        "Y": -1
                    },
                    "FontSize": 32.0
                }
            ]
        }
    ],
    "DefaultStyle": {
        "Styles": [
            {
                "Selectors": "Window",
                "Properties": {
                    "Background": "LightSkyBlue",
                    "BorderRadius": 10.0,
                    "BorderWidth": 2,
                    "BorderColor": "AliceBlue",
                    "SizeMin": {
                        "Width": 160,
                        "Height": 80
                    }
                }
            },
            {
                "Selectors": "Window.Title",
                "Properties": {
                    "Padding": {
                        "Left": 10,
                        "Top": 4,
                        "Right": 10,
                        "Bottom": 0
                    },
                    "Background": "DarkSlateBlue",
                    "BorderRadius": 10.0,
                    "Dock": "Top",
                    "AlignVertical": "Top"
                }
            },
            {
                "Selectors": "Window.Content",
                "Properties": {
                    "Margin": {
                        "Left": 10,
                        "Top": 10,
                        "Right": 10,
                        "Bottom": 10
                    }
                }
            },
            {
                "Selectors": "Window.Title.Text",
                "Properties": {
                    "Text": "Window Title",
                    "AlignHorizontal": "Center",
                    "AlignVertical": "Center",
                    "FontSize": 24.0
                }
            }
