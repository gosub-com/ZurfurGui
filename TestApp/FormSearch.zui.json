{
    "Controller": "TestApp.FormSearch",
    "Layout": "Column",
    "Content": [
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Controller": "Button",
                    "Text": "[X]",
                    "Dock": "Right"
                },
                {
                    "Controller": "Text",
                    "Margin": {
                        "Left": 0,
                        "Top": 0,
                        "Right": 10,
                        "Bottom": 0
                    },
                    "Text": "[X] Replace",
                    "Dock": "Right"
                },
                {
                    "Controller": "Text",
                    "Text": "Search Form:",
                    "Dock": "Left"
                }
            ]
        },
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Controller": "Button",
                    "Text": "Find (F3)",
                    "SizeRequest": {
                        "Width": 120
                    },
                    "Dock": "Right",
                    "Margin": {
                        "Left": 10,
                        "Top": 0,
                        "Right": 10,
                        "Bottom": 0
                    }
                },
                {
                    "Controller": "TextBox",
                    "Text": "Search Text",
                    "Dock": "Left"
                }
            ]
        },
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Controller": "Text",
                    "Text": "Matches (#)",
                    "SizeRequest": {
                        "Width": 120
                    },
                    "Dock": "Right"
                },
                {
                    "Controller": "Text",
                    "Text": "Replace with:"
                }
            ]
        },
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Controller": "Button",
                    "Text": "Replace",
                    "SizeRequest": {
                        "Width": 120
                    },
                    "Margin": {
                        "Left": 10,
                        "Top": 0,
                        "Right": 0,
                        "Bottom": 0
                    },
                    "Dock": "Right"
                },
                {
                    "Controller": "TextBox",
                    "Text": "Replace Text"
                }
            ]
        },
        {
            "Layout": "DockPanel",
            "Content": [
                {
                    "Controller": "Button",
                    "Text": "Replace All",
                    "SizeRequest": {
                        "Width": 120
                    },
                    "Margin": {
                        "Left": 10,
                        "Top": 0,
                        "Right": 0,
                        "Bottom": 0
                    },
                    "Dock": "Right"
                },
                {
                    "Controller": "Text",
                    "Text": "[X] Match Case"
                },
                {
                    "Controller": "Text",
                    "Text": "[X] Match Whole Word",
                    "Margin": {
                        "Left": 10,
                        "Top": 0,
                        "Right": 0,
                        "Bottom": 0
                    }
                }
            ]
        }
    ]
}